<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:background="@color/background">

    <com.pili.pldroid.player.widget.PLVideoTextureView
        android:id="@+id/item_video_video_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!--视频第一帧图-->
    <ImageView
        android:visibility="gone"
        android:id="@+id/item_video_video_first_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:contentDescription="@null" />

    <ImageView
        android:id="@+id/iv_play_item_play_audio_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <!--我想唱-->
    <LinearLayout
        android:id="@+id/ll_play_item_play_audio_collection"
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:background="@drawable/shape_play_sing"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="14dp"
        android:paddingEnd="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_play_item_play_audio_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_play_item_play_audio_title">

        <ImageView
            android:id="@+id/iv_play_item_play_audio_collection"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_sing_nor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="7dp"
            android:gravity="center_vertical"
            android:text="@string/i_want_sing"
            android:textColor="@color/c_white"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_play_item_play_audio_bottom"
        android:layout_width="0dp"
        android:layout_height="71.5dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <LinearLayout
            android:id="@+id/ll_play_item_play_audio_like"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_play_item_play_audio_like"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:scaleType="center"
                android:src="@drawable/ic_like_normal_shandow" />

            <TextView
                android:id="@+id/tv_play_item_play_audio_like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="21w" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_play_item_play_audio_comment"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_play_item_play_audio_comment"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:scaleType="center"
                android:src="@drawable/ic_comment_shandow" />

            <TextView
                android:id="@+id/tv_play_item_play_audio_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="21w" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_play_item_play_audio_gift"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_play_item_play_audio_gift"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:scaleType="center"
                android:src="@drawable/ic_gift_shandow" />

            <TextView
                android:id="@+id/tv_play_item_play_audio_gift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="21w" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_play_item_play_audio_share"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_play_item_play_audio_share"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:scaleType="center"
                android:src="@drawable/ic_share_shandow" />

            <TextView
                android:id="@+id/tv_play_item_play_audio_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/white"
                android:textSize="12sp"
                tools:text="21w" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="3dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/ll_play_item_play_audio_bottom"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/iv_play_item_play_audio_play"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:paddingEnd="3dp"
            android:scaleType="fitStart"
            android:src="@drawable/ic_play_shandow" />

        <TextView
            android:id="@+id/tv_play_item_play_audio_time_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7.5dp"
            android:shadowColor="@color/black_10"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="@string/play_00_00"
            android:textColor="@color/c_ccffffff"
            android:textSize="10sp" />

        <com.yzy.pj.widget.AimyPlayerSeekBar
            android:id="@+id/apsb_play_item_play_audio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="13.5dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tv_play_item_play_audio_time_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:shadowColor="@color/black_10"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="@string/play_00_00"
            android:textColor="@color/c_ccffffff"
            android:textSize="10sp" />
    </LinearLayout>

    <com.yzy.baselibrary.widget.RoundImageView
        android:id="@+id/riv_play_item_play_audio_head"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="115.5dp"
        app:border_color="@color/white"
        app:border_width="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:shape_type="Circle"
        tools:src="@mipmap/ic_launcher" />

    <com.yzy.pj.widget.PlayFollowView
        android:id="@+id/pfv_play_item_play_audio"
        android:layout_width="20.5dp"
        android:layout_height="20.5dp"
        android:layout_marginBottom="105.5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/riv_play_item_play_audio_head"
        app:layout_constraintRight_toRightOf="@+id/riv_play_item_play_audio_head" />

    <FrameLayout
        android:id="@+id/fl_play_item_play_audio_guide_follow"
        android:layout_width="108dp"
        android:layout_height="25dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="0dp"
        android:paddingEnd="8.5dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/pfv_play_item_play_audio"
        app:layout_constraintEnd_toStartOf="@+id/pfv_play_item_play_audio"
        app:layout_constraintTop_toTopOf="@+id/pfv_play_item_play_audio">

        <TextView
            android:layout_width="96dp"
            android:layout_height="match_parent"
            android:background="@drawable/shape_bg_f3f3f3_3"
            android:gravity="center"
            android:text="@string/guide_play_follow"
            android:textColor="@color/c_666666"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="4dp"
            android:layout_height="9.5dp"
            android:layout_gravity="center_vertical|end"
            android:contentDescription="@null"
            android:src="@drawable/ic_1st_arrow" />
    </FrameLayout>

    <com.yzy.pj.widget.RollingTextView
        android:id="@+id/rtv_play_item_play_audio_introduction"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="14.5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/riv_play_item_play_audio_head"
        app:layout_constraintTop_toTopOf="@+id/riv_play_item_play_audio_head" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rtv_play_item_play_audio_introduction">

        <TextView
            android:id="@+id/tv_play_item_play_audio_tag1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/play_bg_play_tag"
            android:drawableStart="@drawable/ic_music"
            android:drawablePadding="4.5dp"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/white"
            android:textSize="10sp"
            tools:text="夜空中最亮的星" />

        <TextView
            android:id="@+id/tv_play_item_play_audio_tag2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="@drawable/play_bg_play_tag"
            android:drawableStart="@drawable/ic_lock_play_small"
            android:drawablePadding="4.5dp"
            android:gravity="center"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:textColor="@color/white"
            android:textSize="10sp"
            tools:text="仅自己可见" />
    </LinearLayout>

    <!--    <ImageView-->
    <!--        android:id="@+id/iv_play_item_play_audio_cover"-->
    <!--        android:layout_width="0dp"-->
    <!--        android:layout_height="0dp"-->
