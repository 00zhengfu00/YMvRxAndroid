    <ImageView
        android:id="@+id/pav_play_item_play_audio"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="222.5dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_play_item_play_audio_tag_activity"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="182.5dp"
        android:background="@drawable/play_bg_play_tag"
        android:drawableStart="@drawable/ic_activity"
        android:drawablePadding="4.5dp"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textColor="@color/white"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="参加了《致敬经典 陈彼得翻唱大赛》比赛活动" />

    <TextView
        android:id="@+id/tv_play_item_play_audio_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="83.5dp"
        android:paddingBottom="3dp"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="夜空中最亮的星" />

    <TextView
        android:id="@+id/tv_play_item_play_audio_best"
        android:layout_width="30dp"
        android:layout_height="15dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/shape_btn_bg_red_2"
        android:gravity="center"
        android:text="@string/play_best"
        android:textColor="@color/c_fefefe"
        android:textSize="9sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_play_item_play_audio_title"
        app:layout_constraintLeft_toRightOf="@+id/tv_play_item_play_audio_title"
        app:layout_constraintTop_toTopOf="@+id/tv_play_item_play_audio_title" />

    <!--    <ProgressBar-->
