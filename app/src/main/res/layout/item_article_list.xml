<?xml version="1.0" encoding="utf-8"?><!--如果有点击事件，则内部的水波纹不能扩散-->
<layout>

    <data>
        
        <variable
            name="itemBean"
            type="com.yzy.example.repository.bean.ArticleBean" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        >

        <TextView
            android:id="@+id/itemArticleUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@{itemBean.showAuthor}"
            android:textColor="@color/colorAccent"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@id/itemArticleTime"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="这是用户名"
            />

        <TextView
            android:id="@+id/itemArticleTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/itemArticleUser"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="2019年10月3日18:10:37"
            android:text="@{itemBean.showTime}"
            />

        <TextView
            android:id="@+id/itemArticleType"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:text="@{itemBean.showTime}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemArticleUser"
            tools:text="这是类型展示"
            />
        <TextView
            android:id="@+id/itemArticleDes"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:text="@{itemBean.showInfo}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/itemArticleType"
            tools:text="这是消息内容,这是消息内容,这是消息内容,这是消息内容,这是消息内容,这是消息内容,这是消息内容,这是消息内容,这是消息内容,这是消息内容"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
